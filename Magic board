import java.util.Scanner;
public class magic{
public static void main(String[]args){
Scanner sc=new Scanner(System.in);
int n=4;
int arr[]=new int[n];
System.out.println("Enter the digits :");
for(int i=0;i<n;i++){
        arr[i]=sc.nextInt();
      }
for (int i = 0; i < 4; i++) {
            char c = (char) arr[i];
            System.out.println(arr[i] + "-" + c);
        }
}
}
